<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MicroHTTPDActivity"
    android:orientation="vertical"
    >


    <!-- URL confirmation -->
    <TextView
        android:id="@+id/greetings"
        android:text="@string/greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        />

    <TextView
        android:id="@+id/http_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:text="http://main2.fr/"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <ImageView
        android:id="@+id/http_qr_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        />

    <CheckBox android:id="@+id/http_secure_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use HTTPs Secure connection"
        />

    <!-- checkbox for read-only vs read write + toast to confirm implication of RW for PUT and DELETE -->
    <CheckBox android:id="@+id/http_readwrite_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept Http PUT and DELETE"
        />

    <!-- password for : nothing, write, readwrite -->

    <TextView
        android:text="@string/security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        />



    <!-- select what to share (Dropdown: SDCard, Photos, Music, Other + TextEdit enabled for Other -->
    <!--
    <TextView
        android:text="What to share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Spinner
        android:id="@+id/http_root_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText android:id="@+id/server_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="/sdcard" />
    -->
</LinearLayout>
